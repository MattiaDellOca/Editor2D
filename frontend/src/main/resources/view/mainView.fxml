<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="500.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ch.supsi.editor2d.frontend.gui.controller.MainViewController">
   <center>
      <BorderPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
          <top>
              <Pane style="-fx-background-color: lightblue; -fx-max-height: 50px;" BorderPane.alignment="CENTER">
                  <Text layoutX="14.0" layoutY="28.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Editor 2D">
                      <font>
                          <Font name="Arial Bold" size="24.0" />
                      </font>
                  </Text>
                  <Text layoutX="121.0" layoutY="19.0" strokeType="OUTSIDE" strokeWidth="0.0" text="v0.1">
                      <font>
                          <Font name="System Bold Italic" size="13.0" />
                      </font>
                  </Text>
              </Pane>
          </top>
          <right>
            <AnchorPane fx:id="pipelinePane" prefWidth="300.0" BorderPane.alignment="CENTER" />
          </right>
         <center>
            <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <center>
                  <AnchorPane fx:id="imagePane" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
               </center>
               <bottom>
                  <HBox style="-fx-spacing: 10px; -fx-padding: 5px;" BorderPane.alignment="BOTTOM_RIGHT">
                    <Button mnemonicParsing="false" onAction="#zoomIn" text="+" />
                    <Button mnemonicParsing="false" onAction="#zoomOut" text="-" />
                  </HBox>
               </bottom>
            </BorderPane>
         </center>
         <left>
            <AnchorPane fx:id="filtersListPane" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
         </left>
      </BorderPane>
   </center>
   <top>
       <MenuBar BorderPane.alignment="CENTER">
           <Menu mnemonicParsing="false" text="File">
               <MenuItem mnemonicParsing="false" onAction="#onOpen" text="Open" />
               <MenuItem mnemonicParsing="false" text="Export image" onAction="#onExport"/>
               <MenuItem mnemonicParsing="false" onAction="#onClose" text="Close" />
           </Menu>
           <Menu mnemonicParsing="false" text="Edit">
                <MenuItem mnemonicParsing="false" onAction="#onUndo" text="Undo" />
                <MenuItem mnemonicParsing="false" onAction="#onRedo" text="Redo" />
               <MenuItem mnemonicParsing="false" onAction="#onRunPipeline" text="Run pipeline" />
           </Menu>
           <Menu mnemonicParsing="false" text="Help">
               <MenuItem mnemonicParsing="false" onAction="#onAboutMenu" text="About" />
           </Menu>
       </MenuBar>
   </top>
</BorderPane>
