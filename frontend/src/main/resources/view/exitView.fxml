<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane minWidth="350.0" style="-fx-padding: 10px;" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <Pane prefHeight="20.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Exit">
               <font>
                  <Font name="Arial Bold" size="16.0" />
               </font>
            </Label>
            <Separator layoutX="-6.0" layoutY="19.0" prefWidth="300.0" />
         </children>
         <BorderPane.margin>
            <Insets bottom="10.0" />
         </BorderPane.margin>
      </Pane>
   </top>
   <center>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <Pane>
               <children>
                  <Label text="Are you sure you want to exit?">
                     <font>
                        <Font name="Arial" size="13.0" />
                     </font>
                  </Label>
               </children>
            </Pane>
            <BorderPane>
               <right>
                  <HBox spacing="10.0" BorderPane.alignment="CENTER">
                     <BorderPane.margin>
                        <Insets top="10.0" />
                     </BorderPane.margin>
                     <children>
                        <Button fx:id="cancelBtn" mnemonicParsing="false" style="-fx-background-color: #DE1A1A#DE1A1A;" text="Cancel" textFill="WHITE">
                           <font>
                              <Font size="13.0" />
                           </font>
                        </Button>
                        <Button fx:id="okBtn" mnemonicParsing="false" style="-fx-background-color: #1983CA;" text="Ok" textFill="WHITE">
                           <font>
                              <Font size="13.0" />
                           </font>
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                        </Button>
                     </children>
                  </HBox>
               </right>
            </BorderPane>
         </children>
      </VBox>
   </center>
</BorderPane>
